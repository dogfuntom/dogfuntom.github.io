<!DOCTYPE html>

<html lang="{{ language }}">
  <head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <link href="/main.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{ if description }}
      <meta name="description" content="{{ description }}">
    {{ /if }}
  </head>

  <body>
    <header>
      <h1>{{ title }}</h1>
    </header>
    <main>
      <article>
        {{ content }}
      </article>
    </main>
  </body>
</html>
